@model List<string>
@{
    ViewData["Title"] = "Function Test Results";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-vial me-2"></i>Function Test Results
            </h2>

            @foreach (var result in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        @if (result.Contains("✅"))
                        {
                            <span class="text-success"><i class="fas fa-check-circle me-2"></i></span>
                        }
                        else if (result.Contains("❌"))
                        {
                            <span class="text-danger"><i class="fas fa-times-circle me-2"></i></span>
                        }
                        else if (result.Contains("🔍"))
                        {
                            <span class="text-info"><i class="fas fa-search me-2"></i></span>
                        }
                        else if (result.Contains("🌐"))
                        {
                            <span class="text-primary"><i class="fas fa-globe me-2"></i></span>
                        }
                        else if (result.Contains("🔗"))
                        {
                            <span class="text-warning"><i class="fas fa-link me-2"></i></span>
                        }
                        else if (result.Contains("👤"))
                        {
                            <span class="text-info"><i class="fas fa-user me-2"></i></span>
                        }
                        else if (result.Contains("📨"))
                        {
                            <span class="text-success"><i class="fas fa-envelope me-2"></i></span>
                        }
                        @result
                    </div>
                </div>
            }

            <div class="mt-4">
                <a href="@Url.Action("CheckConfiguration")" class="btn btn-info me-2">
                    <i class="fas fa-cog me-1"></i>Check Configuration
                </a>
                <a href="@Url.Action("Index")" class="btn btn-primary">
                    <i class="fas fa-home me-1"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">