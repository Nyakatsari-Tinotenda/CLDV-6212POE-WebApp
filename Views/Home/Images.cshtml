@model List<string>

@{
    ViewData["Title"] = "Product Images";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-images me-2"></i>Product Images
                </h2>
                <a href="@Url.Action("UploadImage")" class="btn btn-success">
                    <i class="fas fa-upload me-1"></i>Upload New Image
                </a>
            </div>

            <!-- Alert Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error!</strong> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var imageUrl in Model)
                    {
                        <div class="col-md-4 col-lg-3 mb-4">
                            <div class="card shadow-sm h-100">
                                <div class="card-img-top-container" style="height: 200px; overflow: hidden; background: #f8f9fa;">
                                    <img src="@imageUrl" class="card-img-top" alt="Product Image"
                                         style="height: 100%; width: 100%; object-fit: cover; cursor: pointer;"
                                         onclick="openModal('@imageUrl')">
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-outline-primary btn-sm" onclick="openModal('@imageUrl')">
                                            <i class="fas fa-expand me-1"></i>View Larger
                                        </button>
                                        <a href="@imageUrl" target="_blank" class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-external-link-alt me-1"></i>Open URL
                                        </a>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <small class="text-muted">
                                        <i class="fas fa-database me-1"></i>Azure Blob Storage
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="text-center mt-4">
                    <p class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Showing @Model.Count images stored in Azure Blob Storage
                    </p>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-image fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Images Found</h4>
                    <p class="text-muted">Upload your first product image to get started.</p>
                    <a href="@Url.Action("UploadImage")" class="btn btn-success btn-lg">
                        <i class="fas fa-upload me-1"></i>Upload First Image
                    </a>
                </div>
            }

            <div class="mt-4">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Image Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" alt="Preview" class="img-fluid rounded">
            </div>
            <div class="modal-footer">
                <a href="#" id="downloadLink" class="btn btn-success" download>
                    <i class="fas fa-download me-1"></i>Download
                </a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Close
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- Add Bootstrap JS for modal -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function openModal(imageUrl) {
        document.getElementById('modalImage').src = imageUrl;
        document.getElementById('downloadLink').href = imageUrl;

        // Extract filename for download
        const filename = imageUrl.split('/').pop() || 'product-image.jpg';
        document.getElementById('downloadLink').download = filename;

        const modal = new bootstrap.Modal(document.getElementById('imageModal'));
        modal.show();
    }

    // Keyboard navigation for modal
    document.addEventListener('keydown', function(e) {
        const modal = document.getElementById('imageModal');
        if (modal.style.display !== 'none' && e.key === 'Escape') {
            const bsModal = bootstrap.Modal.getInstance(modal);
            bsModal.hide();
        }
    });
</script>

<style>
    .card {
        transition: transform 0.2s;
        border: none;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-img-top {
        transition: transform 0.3s;
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }

    .modal-content {
        border-radius: 10px;
        border: none;
    }

    .modal-header {
        border-bottom: 1px solid #dee2e6;
        background: #f8f9fa;
        border-radius: 10px 10px 0 0;
    }
</style>