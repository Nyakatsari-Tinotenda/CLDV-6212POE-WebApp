@{
    ViewData["Title"] = "Send Queue Message";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-paper-plane me-2"></i>Send Queue Message
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="SendMessage" method="post">
                        <div class="form-group mb-3">
                            <label for="message" class="form-label">Message Content</label>
                            <textarea class="form-control" id="message" name="message" rows="4"
                                      placeholder="Enter order processing message, e.g., 'Processing order #12345', 'Uploading image productA.jpg'"
                                      required></textarea>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-paper-plane me-1"></i>Send to Queue
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to Home
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>